{
  "name": "@acme/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore",
    "lint": "eslint .",
    "test": "if [ -z \"$CI\" ] && [ -z \"$TEST_DATABASE_URL\" ]; then echo \"Skipping @acme/api tests: TEST_DATABASE_URL is not set\"; exit 0; fi; SKIP_ENV_VALIDATION=1 pnpm with-env vitest --run \"$@\"",
    "test:watch": "if [ -z \"$CI\" ] && [ -z \"$TEST_DATABASE_URL\" ]; then echo \"Skipping @acme/api tests: TEST_DATABASE_URL is not set\"; exit 0; fi; SKIP_ENV_VALIDATION=1 pnpm with-env vitest -w \"$@\"",
    "test:org-hierarchy": "pnpm with-env tsx src/scripts/test-org-hierarchy.ts",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@acme/auth": "workspace:^0.1.0",
    "@acme/db": "workspace:^0.1.0",
    "@acme/env": "workspace:^0.1.0",
    "@acme/shared": "workspace:^0.1.0",
    "@acme/validators": "workspace:^0.1.0",
    "@orpc/client": "^1.8.8",
    "@orpc/server": "^1.8.8",
    "google-auth-library": "^10.3.0",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "nodemailer": "^6.10.0",
    "superjson": "2.2.1",
    "zod": "^3.25.8"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:^0.2.0",
    "@acme/prettier-config": "workspace:^0.1.0",
    "@acme/tsconfig": "workspace:^0.1.0",
    "@types/nodemailer": "^6.4.17",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@acme/eslint-config/base"
    ],
    "ignorePatterns": [
      "vitest.config.ts"
    ]
  },
  "prettier": "@acme/prettier-config"
}
